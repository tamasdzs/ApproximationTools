CC=g++
CFLAGS=-c -std=c++0x -I ./eigen -I ./headers -I ../src
LDFLAGS=
LIBS=
SOURCES=main.cpp OrtFunSys.cpp Hermite.cpp OrtCompresser.cpp NelderMead.cpp MatchingPursuit.cpp
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=main

all: $(SOURCES) $(EXECUTABLE)
    
$(EXECUTABLE): $(OBJECTS) 
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@ $(LIBS)

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@ $(LIBS)
